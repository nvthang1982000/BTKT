<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:background="@drawable/botronedt"
            android:layout_marginTop="10dp"
            android:textSize="39dp"
            android:textStyle="bold"
            android:text="Điểm hiện có:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:gravity="center"
            android:id="@+id/scd"
            android:background="@drawable/botronedt"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:textSize="39dp"
            android:textStyle="bold"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

    </LinearLayout>
    <TextView
        android:id="@+id/socau"
        android:background="@drawable/botronedt"
        android:layout_marginTop="20dp"
        android:textSize="39dp"
        android:textStyle="bold"
        android:text="Câu hỏi 1:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/hoi"
        android:layout_marginTop="20dp"
        android:textSize="28dp"
        android:gravity="center"
        android:background="@drawable/botronedt"
        android:text="Hãy chọn đáp án đúng nhất!"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/cauhoi"
        android:layout_marginTop="20dp"
        android:textSize="38dp"
        android:gravity="center"
        android:background="@drawable/botronedt"
        android:text="7 + 2 = ?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:onClick="btndapan1"
        android:id="@+id/dapan1"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:textSize="26dp"
        android:text="9"
        android:background="@drawable/botronbuttondn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"/>
    <Button
        android:onClick="btndapan2"
        android:id="@+id/dapan2"
        android:layout_marginTop="6dp"
        android:layout_gravity="center"
        android:textSize="26dp"
        android:text="6"
        android:background="@drawable/botronbuttondn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"/>
    <Button
        android:onClick="btndapan3"
        android:id="@+id/dapan3"
        android:layout_marginTop="6dp"
        android:layout_gravity="center"
        android:textSize="26dp"
        android:text="10"
        android:background="@drawable/botronbuttondn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"/>
    <Button
        android:onClick="btndapan4"
        android:id="@+id/dapan4"
        android:layout_marginTop="6dp"
        android:layout_gravity="center"
        android:textSize="26dp"
        android:text="8"
        android:background="@drawable/botronbuttondn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:text="Trang chủ"
        android:id="@+id/TrangChu"
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/botronbtn"/>
        <Button
            android:text="Hoàn thành"
            android:id="@+id/KetQua"
            android:layout_margin="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/botronbtn"/>
        <ImageButton
            android:id="@+id/bNext"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/next" />

    </LinearLayout>




</LinearLayout>